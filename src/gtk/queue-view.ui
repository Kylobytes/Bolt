<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="QueueView" parent="GtkBox">
    <property name="orientation">1</property>
    <property name="hexpand">true</property>
    <property name="vexpand">true</property>
    <property name="valign">3</property>
    <child>
      <object class="AdwStatusPage" id="empty_status">
        <property name="icon-name">system-search-symbolic</property>
        <property name="title" translatable="true">No podcasts found</property>
        <property name="description" translatable="true">Add podcasts to the queue from the episodes tab</property>
      </object>
    </child>
  </template>
</interface>
