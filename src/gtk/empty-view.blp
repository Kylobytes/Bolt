using Gtk 4.0;
using Adw 1;

template $EmptyView : Gtk.Box {
  orientation: vertical;
  hexpand: true;
  vexpand: true;

  Adw.HeaderBar {
    styles ["flat"]

    Gtk.Box {
      visible: false;
    }
  }

  Adw.StatusPage {
    icon-name: "edit-find";
    title: _("No podcasts found");
    description: "It seems you haven't subscribed to any shows yet";
    vexpand: true;
    hexpand: true;

    Gtk.Button btn_discover {
      halign: center;

      Gtk.Label {
        label: _("Discover Podcasts");
      }
    }
  }
}
